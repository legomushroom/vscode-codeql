{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "npm run build",
      "options": {
        "cwd": "/home/codespace/workspace/vscode-codeql/extensions/ql-vscode"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": [
        {
          "owner": "typescript",
          "fileLocation": "absolute",
          "pattern": {
            "regexp": "^\\[gulp-typescript\\] ([^(]+)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\): error TS\\d+: (.*)$",
            "file": 1,
            "location": 2,
            "message": 3
          }
        }
      ]
    },
    {
      "label": "Format",
      "type": "shell",
      "command": "npm run format",
      "options": {
        "cwd": "/home/codespace/workspace/vscode-codeql/extensions/ql-vscode"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "watch",
      "path": "/home/codespace/workspace/vscode-codeql/extensions/ql-vscode",
      "problemMatcher": [
        "$gulp-tsc"
      ],
      "group": "build"
    }
  ]
}
